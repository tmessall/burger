<h1>Eat-a-burger!</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-4 boxed">
      <h2>Burgers that are not devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="change-devoured" data-id="{{id}}" data-newdevoured="true">Devour this!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-4 boxed">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
    <div class="col-4 boxed">
      <h2>Burgers that are devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>